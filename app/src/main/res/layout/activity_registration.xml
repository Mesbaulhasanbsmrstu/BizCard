<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.Nextechbd.bizcards.Registration"
    android:gravity="center">

    <EditText
        android:id="@+id/uname"
        android:layout_width="365dp"
        android:layout_height="58dp"
        android:hint="NameUser"
        android:inputType="text"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/uphone"
        android:layout_width="365dp"
        android:layout_height="58dp"
        android:hint="Mobile"
        android:inputType="phone"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/referel"
        android:layout_width="365dp"
        android:layout_height="58dp"
        android:hint="6 digit Referel code(optional)"
        android:inputType="numberDecimal"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/upassword1"
        android:layout_width="365dp"
        android:layout_height="58dp"
        android:hint="Password"
        android:inputType="numberPassword"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/upassword2"
        android:layout_width="365dp"
        android:layout_height="58dp"
        android:hint="Confirm Password"
        android:inputType="numberPassword"
        android:layout_marginTop="15dp"/>
    <Button
        android:background="@drawable/loginbuttonround"
        android:id="@+id/ubutton"
        android:layout_width="143dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"/>

</LinearLayout>